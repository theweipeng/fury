namespace complex_fbs;

attribute "priority";
attribute "custom_note";

enum Status : ushort (deprecated) {
  UNKNOWN = 0,
  STARTED = 1,
  FINISHED = 2
}

struct ScalarPack (priority: 2) {
  b: byte;
  ub: ubyte;
  s: short;
  us: ushort;
  i: int;
  ui: uint;
  l: long;
  ul: ulong;
  f: float;
  d: double;
  ok: bool;
}

table Container (custom_note: "extra") {
  id: ulong;
  status: Status = STARTED;
  bytes: [byte];
  numbers: [int];
  scalars: ScalarPack;
  names: [string];
  flags: [bool] (deprecated);
}

root_type Container;
